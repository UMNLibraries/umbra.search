<% document_presenter = presenter(document) %>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <%= raw "<span class=\"type-icon #{type_class(document_presenter.type)}\">#{document_presenter.type}</span>" %>
    </div>
  </div>
  <div class="panel-body row">
    <div class="thumbnail-col">
      <div class="search-thumbnail">
        <%= render 'thumbnail_default', :document => document, :document_counter => document_counter %>
      </div>
    </div>
    <div class="metadata-col">
      <%= render 'list_results_metadata', :document => document, :document_counter => document_counter %>
    </div>
  </div>
  <% if current_user && can?(:update, document_presenter.record) %>
    <div class="panel-body"><%= render 'flags/flag_vote_buttons', document: document %></div>
    <%= render 'records/tag', document: document_presenter %>
  <% end %>
</div>