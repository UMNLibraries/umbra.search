#umbra-search-form {
  width: 350px;
}
#umbra-search-form img {
  display: inline;
  height: 55px;
  width: 55px;
  opacity: 100;
}
#umbra-search-form table,
#umbra-search-form td, 
#umbra-search-form tr {
 border: none;
}
#umbra-search-form .search-text {
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
  border-top-right-radius: 0;
  margin-right: -2px
}
#umbra-search-form .btn-primary {
  border-color: #777777;
  background-color: #EE6D4F;
  background-image: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 3px;
  border-top-right-radius: 3px;
}
#umbra-search-form .btn-primary a {
  color: white;
}
#umbra-search-form .btn-primary a:hover {
  text-decoration: none;
}
#umbra-search-form .btn-primary:hover {
  background-color: #C35941;
}
#umbra-search-form.form-plain {
  width: 240px;
}