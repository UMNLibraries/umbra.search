#widget-search-form {
  #umbra-search-form {
    width: 355px;
  }
  #umbra-search-form img {
    display: inline;
    height: 55px;
    width: 55px;
    opacity: 100;
    margin: 0 5px;
  }

  #umbra-search-form #logo-cell {
    text-align: right;
    height: 55px;
  }

  #umbra-search-form table,
  #umbra-search-form td,
  #umbra-search-form tr {
   border: none;
   padding: 0;
  }
  #umbra-search-form .search-text {
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-top-right-radius: 0;
    margin-right: -2px
  }
  #umbra-search-form .btn-primary {
    border: 0 !important;
    background-color: #EE6D4F;
    background-image: none;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 3px;
    border-top-right-radius: 3px;
    height: 34px;
    color: white;
    font-size: 14px;
  }
  #umbra-search-form .btn-primary a {
    color: white;
  }
  #umbra-search-form .btn-primary a:hover {
    text-decoration: none;
  }
  #umbra-search-form .btn-primary:hover {
    background-color: #C35941 !important;
  }
  #umbra-search-form.form-plain {
    width: 240px;
  }
}