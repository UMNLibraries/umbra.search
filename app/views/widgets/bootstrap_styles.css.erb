#umbra-widget-search-form {
  width: 355px;
}
#umbra-widget-search-form img {
  display: inline;
  height: 55px;
  width: 55px;
  opacity: 100;
  margin: 0 5px;
}

#umbra-widget-search-form #logo-cell {
  text-align: right;
  height: 55px;
}

#umbra-widget-search-form table,
#umbra-widget-search-form tbody,
#umbra-widget-search-form td,
#umbra-widget-search-form tr {
 border: none;
 padding: 0;
}
#umbra-widget-search-form .search-text {
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
  border-top-right-radius: 0;
  margin-right: -2px
}
#umbra-widget-search-form .btn-primary {
  border: 0 !important;
  background-color: #EE6D4F;
  background-image: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 3px;
  border-top-right-radius: 3px;
  height: 34px;
  color: white;
  font-size: 14px;
}
#umbra-widget-search-form .btn-primary a {
  color: white;
}
#umbra-widget-search-form .btn-primary a:hover {
  text-decoration: none;
}
#umbra-widget-search-form .btn-primary:hover {
  background-color: #C35941 !important;
}
#umbra-widget-search-form.form-plain {
  width: 240px;
}